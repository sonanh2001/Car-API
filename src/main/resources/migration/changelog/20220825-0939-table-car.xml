<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
  https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
  <changeSet id="202208250939-table-car" author="Son Anh">
    <createTable tableName="car">
      <column name="car_id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" primaryKeyName="pk_car_id"/>
      </column>
      <column name="name" type="varchar(128)">
        <constraints nullable="false"/>
      </column>
      <column name="brand" type="varchar(50)">
        <constraints nullable="false"/>
      </column>
      <column name="wheels_number" type="int">
        <constraints nullable="false"/>
      </column>
      <column name="color" type="varchar(20)">
        <constraints nullable="false"/>
      </column>
      <column name="price" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="publication_date" type="int">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>